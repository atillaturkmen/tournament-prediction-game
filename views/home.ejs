<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('header'); -%>

    <!-- css -->
    <link rel="stylesheet" href="../../public/css/styles.css">
    <link rel="stylesheet" href="../../public/css/neutral-navbar.css">

</head>

<body>
    <%- include('navbar'); -%>

    <!-- leaderboard -->
    <div class="leaderboard-div" style="text-align: center;">
        <table class="leaderboard">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">Skor</th>
                    <th scope="col">Ä°Y/MS</th>
                    <th scope="col">Puan</th>
                </tr>
            </thead>
            <% for (var i = 0; i < topTen.length; i++) { %>
            <tr>
                <td><%= i+1 %></td>
                <td><a href = "/user/<%= topTen[i].username %>"><%= topTen[i].username %></a></td>
                <td><%= topTen[i].correct_score_guesses %></td>
                <td><%= topTen[i].correct_winner_guesses %></td>
                <td><%= topTen[i].points%></td>
            </tr>
            <% } %>
        </table>
        <br>
        <br>
    </div>
    <!-- leaderboard-end -->

     <!-- tiny-leaderboard -->
     <div class="tiny-leaderboard-div">
        <table class="tiny-leaderboard">

            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">Puan</th>
                </tr>
            </thead>

            <tbody>
                <% for (var i = 0; i < topTen.length; i++) { %>
                <tr>
                    <td><%= i+1 %></td>
                    <td><a href = "/user/<%= topTen[i].username %>"><%= topTen[i].username %></a></td>
                    <td><%= topTen[i].points%></td>
                </tr>
                <% } %>
            </tbody>

        </table>
    </div>
    <!-- tiny-leaderboard-end -->


</body>

</html>